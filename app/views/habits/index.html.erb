<body class="background-color-habits">
<div class="container-page">
  <%= render "shared/searchbar" %>
  <h1 class="habit-title">Habits</h1>
  <div class="container">
    <div class="container-cards">
            <% if current_user.habits.length > 0 %>
              <% @search_results.each do |habit| %>
                <div class="habit-content">
                  <li class= "habit-date" ><%= habit.start_date.strftime('%d %B, %Y') %></li>
                  <li class= "habit-title-card" ><%= habit.title %></li>
                  <%# <li class = "view-this" ><%= link_to "View this habit", habit_path(habit.id)</li> %>
                </div>
              <% end %>
              <% else %>
                <div class="no-habits">
                  <div class="#bottom">
                      <p> You don't have any habits yet</p>
                      <p> Tap the plus button êœœ to create a new habit</p>
                  </div>
                  <div class="box">
                    <%= image_tag "no_habits.jpg", {class: "d-block w-100"} %>
                    <p>Read about nudge theory here: <%= link_to "Nudge", "https://www.imperial.ac.uk/nudgeomics/about/what-is-nudge-theory/#:~:text=Nudge%20Theory%20is%20based%20upon,chosen%20over%20another%20by%20individuals.", target: "_blank" %> ğŸ“Œ</p>
                  </div>
                </div>
            <% end %>
    </div>
  </div>
</div>
</body>
