<div class="dash-container">
  <div class="dashboard-container">
    <div class="dashboard-top-container">
      <div class="dash-title">
        <h1> Hi, <%= current_user.first_name %> </h1>
        <p> Let's Create new habits </p>
      </div>
      <%= link_to profile_path do %><%= image_tag "avatar_img.jpg", id: "avatar" %><% end %>
    </div>
    <div class="dashboard-habit-container">
      <h1>My Habits</h1>
      <div class="dashboard-btn">
        <div class="btn-left">
          <button class="on-going-btn">
            <div class="btn-content-top">
              <i class="gg-folder"></i>
              <%= link_to habits_path do %><i class="gg-chevron-double-right"></i><% end %>
            </div>
            <div class="btn-content-bot">
              <h5>On Going</h5>
              <p><%= @habit.size %> habits</p>
            </div>
          </button>
        </div>
        <div class="btn-right">

          <button class="milestones-btn">
          <div class="btn-content-top">
            <i class="gg-media-live"></i>
            <%= link_to habits_path do %><i class="gg-chevron-double-right"></i><% end %>
          </div>

          <div class="btn-content-bot">
            <h5>Milestones</h5>
            <p><%= @milestone.size %> achievements</p>
          </div>
          </button>
        </div>
      </div>
    </div>
  </div>
    <h1 class="performance-title">Performance</h1>
  <div class="performance-container">
    <%= pie_chart @milestone.group(:title).sum(:duration), empty: "You need some milestones!", suffix: " Hours", legend: false, dataset: {borderWidth: 1, spacing: 2, offset: 2, borderRadius: 10}, donut: true, colors: ["#8F99EB", "#E88B8C", "#7EC8E7"] %>
  </div>
</div>
